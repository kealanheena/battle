<h1><%= @player_1.name %> vs. <%= @player_2.name %></h1>
<h2><%= @player_1.name %>'s Health: <%= @player_1.health %>
<h2><%= @player_2.name %>'s Health: <%= @player_2.health %>

<% if @game.counter != 1 && @game.counter.even? %>
  <h3><%= @player_1.name %> attacked <%= @player_2.name %></h3>
<% elsif @game.counter != 1 && !@game.counter.even? %>
  <h3><%= @player_2.name %> attacked <%= @player_1.name %></h3>
<% end %>

<form action="/attack">
  <input type="submit" value="Attack">
</form>
